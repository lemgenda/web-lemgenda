RewriteEngine On

# FORCE HTTPS + WWW PREFERENCE (Choose one option below)

# Option A: Force www (recommended for SEO)
RewriteCond %{HTTPS} off
RewriteCond %{HTTP_HOST} !^www\. [NC]
RewriteRule ^(.*)$ https://www.lemgenda.hr/$1 [L,R=301]

RewriteCond %{HTTPS} off
RewriteCond %{HTTP_HOST} ^www\. [NC]
RewriteRule ^(.*)$ https://www.lemgenda.hr/$1 [L,R=301]

# Option B: Remove www (alternative)
# RewriteCond %{HTTPS} off [OR]
# RewriteCond %{HTTP_HOST} ^www\. [NC]
# RewriteRule ^(.*)$ https://lemgenda.hr/$1 [L,R=301]

# CANONICAL URL - Ensure consistent trailing slashes
RewriteCond %{REQUEST_URI} /+[^\.]+$
RewriteRule ^(.+[^/])$ /$1/ [R=301,L]

# REMOVE .HTML EXTENSION + TRAILING SLASH
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*?)/?$ $1.html [L]

# REDIRECT .HTML REQUESTS TO CLEAN URLs
RewriteCond %{THE_REQUEST} \s/+(.*?)\.html[\s?] [NC]
RewriteRule ^ /%1 [R=301,L,NE]

# CUSTOM ERROR PAGES (SEO-friendly)
ErrorDocument 404 /index.html
ErrorDocument 500 /index.html

# SECURITY HEADERS (SEO & Security)
<IfModule mod_headers.c>
    # Security headers
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "DENY"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"

    # SEO headers
    Header always set X-Robots-Tag "all"
</IfModule>

# PERFORMANCE & CACHING (SEO Impact)
<IfModule mod_expires.c>
    ExpiresActive On

    # HTML - no cache for fresh content
    ExpiresByType text/html "access plus 0 seconds"

    # CSS & JS - 1 month
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/json "access plus 1 month"

    # Images - long cache
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"

    # Fonts - very long cache
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
</IfModule>

# COMPRESSION (Page Speed SEO)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE application/x-font-woff
    AddOutputFilterByType DEFLATE application/x-font-woff2
</IfModule>

# BLOCK ACCESS TO SENSITIVE FILES
<FilesMatch "\.(env|md|gitignore|gitattributes|lock)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# ROBOTS.TXT ACCESS
<Files "robots.txt">
    Order allow,deny
    Allow from all
</Files>